class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        if len(prices) < 2:
            return 0
        buy, diff = float(inf), 0 
        for p in prices:
            buy, diff = min(p, buy), max(diff, p-buy)
        return diff

