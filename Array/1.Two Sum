class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        
        unordered_map<int, int> hash;
        
        for (int i = 0; i < nums.size(); i++) {
            int numToFind = target - nums[i];
            
            if (hash.find(numToFind) != hash.end())
                return {hash[numToFind], i};
            
            hash[nums[i]] = i;
        }
        
        return {};
    }
};


Runtime: 8 ms, faster than 95.33% of C++ online submissions for Two Sum.
Memory Usage: 10.8 MB, less than 40.77% of C++ online submissions for Two Sum.
